<?xml version="1.0" encoding="UTF-8"?>
<form>
   <fieldset name="jollyany_course_item" label="Section1" addfieldpath="/libraries/jollyany/framework/fields">
      <field type="list" name="jollyany_lesson_type" label="JOLLYANY_CONTENT_TYPE" default="content">
         <option value="section">Section</option>
         <option value="content">Content</option>
      </field>
      <field type="text" name="lesson_section_title" label="JOLLYANY_LESSON_SECTION_TITLE" description="JOLLYANY_LESSON_SECTION_TITLE_DESC" showon="jollyany_lesson_type:section" />
      <field type="text" name="lesson_content_title" label="JOLLYANY_LESSON_CONTENT_TITLE" description="JOLLYANY_LESSON_SECTION_TITLE_DESC" showon="jollyany_lesson_type:content" />
      <field type="text" name="lesson_content_duration" label="JOLLYANY_LESSON_CONTENT_DURATION" description="JOLLYANY_LESSON_SECTION_DURATION_DESC" showon="jollyany_lesson_type:content" />

      <field type="text" name="lesson_content_video_url" label="JOLLYANY_LESSON_VIDEO_URL" description="JOLLYANY_LESSON_VIDEO_URL_DESC" showon="jollyany_lesson_type:content" />
      <field type="filelist" name="lesson_content_download_link" filter="pdf" directory="images" hide_none="true" label="JOLLYANY_LESSON_DOWNLOAD_LINK" description="JOLLYANY_LESSON_DOWNLOAD_LINK_DESC" showon="jollyany_lesson_type:content" />

   </fieldset>
</form>